<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="HR Payroll Test Suite" parallel="methods" thread-count="1">

    <test name="Smoke Tests">
        <classes>
            <class name="testRunners.SmokeTestRunner"/>
        </classes>
    </test>

    <test name="Positive Tests">
        <classes>
            <class name="testRunners.PositiveTestRunner"/>
        </classes>
    </test>

    <test name="Negative Tests">
        <classes>
            <class name="testRunners.NegativeTestRunner"/>
        </classes>
    </test>

</suite>